        <component>
            <name>batch</name>
            <description>Batch Processor</description>
            <canBeEdited>1</canBeEdited>
            <selected>1</selected>
            <show>1</show>
            <folderList>
                <folder>
                    <description>Batch Interface Conf</description>
                    <destination>${installdir}/etc/openca</destination>
                    <name>bp</name>
                    <platforms>all</platforms>
                    <distributionFileList>
                        <distributionDirectory>
                            <origin>/usr/local/etc/openca/bp</origin>
                        </distributionDirectory>
		    </distributionFileList>
		</folder>
                <folder>
                    <description>Batch Interface</description>
                    <destination>/opt/local/var/www/cgi-bin/pki</destination>
                    <name>batchcgi</name>
                    <platforms>all</platforms>
                    <distributionFileList>
                        <distributionDirectory>
                            <origin>/opt/local/var/www/cgi-bin/pki/batch</origin>
                        </distributionDirectory>
		    </distributionFileList>
		</folder>
                <folder>
                    <description>Batch Interface</description>
                    <destination>/opt/local/var/www/html/pki</destination>
                    <name>batchhtml</name>
                    <platforms>all</platforms>
                    <distributionFileList>
                        <distributionDirectory>
                            <origin>/opt/local/var/www/html/pki/batch</origin>
                        </distributionDirectory>
		    </distributionFileList>
		</folder>
		<folder>
                    <description>Batch Interface Access Control</description>
                    <destination>${installdir}/etc/openca/access_control</destination>
                    <name>batchac</name>
                    <platforms>all</platforms>
                    <distributionFileList>
                        <distributionFile>
                            <origin>/usr/local/etc/openca/access_control/batch.xml.template</origin>
                        </distributionFile>
		    </distributionFileList>
		    <actionList>
			<changeOwnerAndGroup>
			    <owner>www</owner>
			    <group>www</group>
			    <files>@build_dir//usr/local/etc/openca/access_control/batch.*</files>
			</changeOwnerAndGroup>
		   </actionList>
		</folder>
                <folder>
                    <description>Batch Menu CFG</description>
                    <destination>${installdir}/etc/openca/menus</destination>
                    <name>batchmenuconfig</name>
                    <platforms>all</platforms>
                    <distributionFileList>
                        <distributionFile>
                            <origin>/usr/local/etc/openca/menus/batch-menu.xml.template</origin>
                        </distributionFile>
                    </distributionFileList>
                </folder>
		<folder>
                    <description>Batch Interface Server Config</description>
                    <destination>${installdir}/etc/openca/servers</destination>
                    <name>batchsrv</name>
                    <platforms>all</platforms>
                    <distributionFileList>
                        <distributionFile>
                            <origin>/usr/local/etc/openca/servers/batch.conf.template</origin>
                        </distributionFile>
                    </distributionFileList>
		    <actionList>
			<changeOwnerAndGroup>
			    <owner>www</owner>
			    <group>www</group>
			    <files>/usr/local/etc/openca/servers/*</files>
			</changeOwnerAndGroup>
		   </actionList>
                </folder>
            </folderList>
        </component>
