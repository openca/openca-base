        <component>
            <name>node</name>
            <description>Node Management</description>
            <canBeEdited>1</canBeEdited>
            <selected>1</selected>
            <show>1</show>
            <folderList>
                <folder>
                    <description>Node Administration CGI</description>
                    <destination>/opt/local/var/www/cgi-bin/pki</destination>
                    <name>nodecgi</name>
                    <platforms>all</platforms>
                    <distributionFileList>
                        <distributionDirectory>
                            <origin>/opt/local/var/www/cgi-bin/pki/node</origin>
                        </distributionDirectory>
                    </distributionFileList>
                </folder>
                <folder>
                    <description>Node Administration HTDocs</description>
                    <destination>/opt/local/var/www/html/pki</destination>
                    <name>nodehtml</name>
                    <platforms>all</platforms>
                    <distributionFileList>
                        <distributionDirectory>
                            <origin>/opt/local/var/www/html/pki/node</origin>
                        </distributionDirectory>
                    </distributionFileList>
                </folder>
                <folder>
                    <description>Node Administration AC</description>
                    <destination>${installdir}/etc/openca/access_control</destination>
                    <name>nodeac</name>
                    <platforms>all</platforms>
                    <distributionFileList>
                        <distributionFile>
                            <origin>/usr/local/etc/openca/access_control/node.xml.template</origin>
                        </distributionFile>
                    </distributionFileList>
		    <actionList>
			<changeOwnerAndGroup>
			    <owner>madwolf</owner>
			    <group>www</group>
			    <files>/usr/local/etc/openca/access_control/node.xml*</files>
			</changeOwnerAndGroup>
		   </actionList>
                </folder>
                <folder>
                    <description>Node Menu CFG</description>
                    <destination>${installdir}/etc/openca/menus</destination>
                    <name>nodemenuconfig</name>
                    <platforms>all</platforms>
                    <distributionFileList>
                        <distributionFile>
                            <origin>/usr/local/etc/openca/menus/node-menu.xml.template</origin>
                        </distributionFile>
                    </distributionFileList>
                </folder>
                <folder>
                    <description>Node Administration Servers</description>
                    <destination>${installdir}/etc/openca/servers</destination>
                    <name>nodesrv</name>
                    <platforms>all</platforms>
                    <distributionFileList>
                        <distributionFile>
                            <origin>/usr/local/etc/openca/servers/node.conf.template</origin>
                        </distributionFile>
                    </distributionFileList>
		    <actionList>
			<changeOwnerAndGroup>
			    <owner>www</owner>
			    <group>www</group>
			    <files>${installdir}/etc/openca/servers/*</files>
			</changeOwnerAndGroup>
		   </actionList>
                </folder>
            </folderList>
        </component>
